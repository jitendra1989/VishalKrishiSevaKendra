<div class="nested-fields form-inline">
	<div class="form-group image-code">
		<%= f.label :code %>
		<%= f.text_field :code, class: 'form-control' %>
	</div>
	<div class="form-group">
		<% if f.object && f.object.name? %>
			<div class="relative inline-block changable-image">
				<%= image_tag f.object.name.small, class: 'img-responsive' %>
				<%= f.file_field :name, class: 'absolute file-upload' %>
				<span class="filename"></span>
			</div>
			<%= f.label :name, 'Change Image', class: 'btn btn-default' %>
			<%= link_to_remove_association f, class: 'delete-link btn btn-default' do %>
				<span class="glyphicon glyphicon-remove"></span>
			<% end %>
		<% else %>
			<%= f.label :name, 'Product Image' %>
			<%= f.file_field :image %>
		<% end %>
	</div>
	<hr/>
</div>
