= form_for [:admin, @coupon_code] do |f|
  .form-group
    = f.label :code
    = f.text_field :code, required: true
  .form-group
    = f.label :percent
    = f.number_field :percent, required: true
  .form-group.datetime-selector
    = f.label :active_from
    = f.datetime_select :active_from, required: true, prompt: true
  .form-group.datetime-selector
    = f.label :active_to
    = f.datetime_select :active_to, required: true, prompt: true
  .form-group.text-center
    = f.submit 'Submit', class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn btn-default'
