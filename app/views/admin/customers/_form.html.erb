<%= form_for [:admin, @customer] do |f| %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :name, class: 'required' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :cast, class: 'required' %>
        <%= f.collection_select :cast_id, Cast.all, :id, :name, {prompt: "Select"}, {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :village, class: 'required' %>
        <%= f.collection_select :village_id, Village.all, :id, :name, {prompt: "Select"}, {class: "form-control"} %>
      </div>

      <div class="col-sm-6">
        <%= f.label :phone, class: 'required' %>
        <%= f.number_field :phone, class: 'form-control' %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :mobile, class: 'required' %>
        <%= f.number_field :mobile, maxlength: 10, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :address, class: 'required' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :pincode, class: 'required' %>
        <%= f.number_field :pincode, maxlength: 10, class: 'form-control' %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :city, class: 'required' %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :state, class: 'required' %>
        <%= f.text_field :state, class: 'form-control' %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :country, class: 'required' %>
        <%= f.text_field :country, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :company_name %>
        <%= f.text_field :company_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :company_address %>
        <%= f.text_field :company_address, class: 'form-control' %>
      </div>

      <div class="col-sm-6">
        <%= f.label :company_phone %>
        <%= f.text_field :company_phone, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group text-center">
    <%= f.button "Save", name: :next, value: :save, class: 'btn btn-primary' %>
    <%= link_to "Cancel", :back, class: "btn btn-default" %>
  </div>
<% end %>
