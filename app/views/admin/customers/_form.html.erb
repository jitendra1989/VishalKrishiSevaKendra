<%= form_for [:admin, @customer] do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'required' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: 'required' %>
    <%= f.number_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :mobile, class: 'required' %>
    <%= f.number_field :mobile, maxlength: 10, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'required' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pincode, class: 'required' %>
    <%= f.number_field :pincode, maxlength: 10, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'required' %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :state, class: 'required' %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'required' %>
    <%= f.text_field :country, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :company_name %>
    <%= f.text_field :company_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :company_address %>
    <%= f.text_field :company_address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :company_phone %>
    <%= f.text_field :company_phone, class: 'form-control' %>
  </div>
  <div class="form-group text-center">
    <%= f.button "Save", name: :next, value: :save, class: 'btn btn-primary' %>
    <%= f.button "Save & Go To Quotation", name: :next, value: :quotation, class:  'btn btn-primary' %>
    <%= f.button "Save & Go To Cart", name: :next, value: :cart, class:  'btn btn-primary' %>
    <%= link_to "Cancel", :back, class: "btn btn-default" %>
  </div>
<% end %>
