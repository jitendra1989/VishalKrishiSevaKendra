<div class="nested-fields form-inline image-specifications">
  <span>
    <%= link_to_remove_association f, class: 'delete-link btn btn-default' do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </span>
  <div class="form-group">
    <% if f.object.characteristic_image.try(:name?) %>
      <div class="inline-block characteristic-name">
        <%= f.object.characteristic.name %>
      </div>
      <div class="image-checkbox relative inline-block">
        <%= image_tag f.object.characteristic_image.name.small, class: 'img-responsive' %>
      </div>
    <% else %>
      <%= f.select :characteristic_id, Characteristic.pluck(:name, :id), { prompt: 'Select Specification' }, class: 'form-control characteristic-changer', 'data-url' => images_admin_characteristic_path(0), 'data-uid' => '[new_product_characteristics]', 'data-invoker' => 'product' %>
    <% end %>
  </div>
  <div class="form-group characteristic-image"></div>
  <br/>
  <br/>
</div>
