.row
	.col-md-12
		%h2 Edit Product
	.col-md-12
	.col-md-12
		.profile-box
			.text-right
				=link_to "View #{@product.class.to_s.pluralize}", [:admin, @product.class]
			.links.text-center
				= link_to 'Info', edit_admin_product_path(@product, :info), class: 'btn btn-default'
				= link_to 'Images', edit_admin_product_path(@product, :images), class: 'btn btn-default'
				= link_to 'Categories', edit_admin_product_path(@product, :categories), class: 'btn btn-default'
				= link_to 'Cross Sell', edit_admin_product_path(@product, :crosssell), class: 'btn btn-default'
				= link_to 'Specifications', edit_admin_product_path(@product, :specifications), class: 'btn btn-default'
			= render 'form'
