.row
  .col-md-12
    %h2 Products
  .col-md-10.col-md-offset-1
    .profile-box
      .text-right
        =link_to 'New Product', new_admin_product_path
      %br
      %table
        %tr
          %th Name
          %th Code
          %th Description
          %th Price
          %th Active
          %th.text-center Actions
        - @products.each do |product|
          %tr
            %td= product.name
            %td= product.code
            %td= product.description
            %td= product.price
            %td= product.active
            %td.actions.text-center
              = link_to "view stocks", admin_product_stocks_path(product)
              = link_to edit_admin_product_path(product) do
                %span.glyphicon.glyphicon-pencil
              = link_to admin_product_path(product) do
                %span.glyphicon.glyphicon-search
              = link_to admin_product_path(product), method: :delete, class: 'delete-link', 'data-confirm' => 'Are you sure?' do
                %span.glyphicon.glyphicon-remove
