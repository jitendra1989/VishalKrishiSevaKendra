.row
  .col-md-12
    %h2= "#{@products.first.class}"
  .col-md-12
    .product-container
      .row
        .col-md-6= paginate @products
        .col-md-4.text-right
          = link_to 'New Grouped Product', new_admin_product_group_path
        .col-md-2.text-right
          = link_to 'New Product', new_admin_product_path
      .row
        - @products.each do |product|
          .col-md-3
            = content_tag_for(:div, product) do
              = render 'product_display', product: product
      .row
        .col-md-6= paginate @products
