.row
	.col-md-12
		%h2= "#{@product.class}"
	.col-md-6.col-md-offset-3
		.profile-box
			.text-right
				=link_to "Edit  #{@product.class}", [:edit, :admin, @product]
			%p
				%strong.title Name:
				= @product.name
			%p
				%strong.title Code:
				= @product.code
			%p
				%strong.title Description:
				= @product.description
			%p
				%strong.title Price:
				= number_to_currency @product.price_with_taxes
			%p
				%strong.title Active:
				= @product.active
			%p
				%strong.title Product Type:
				= @product.product_type.name
