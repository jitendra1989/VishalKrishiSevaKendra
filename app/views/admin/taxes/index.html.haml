.row
  .col-md-12
    %h2 Taxes
  .col-md-12
    .profile-box
      .row
        .col-md-6= paginate @taxes
        .col-md-6
          .text-right
            =link_to 'New Tax', new_admin_tax_path
        .col-md-12
          %br
          %table
            %tr
              %th Name
              %th Percentage
              %th.text-center Actions
            - @taxes.each do |tax|
              %tr
                %td= tax.name
                %td= "#{tax.percentage}%"
                %td.actions.text-center
                  = link_to edit_admin_tax_path(tax) do
                    %span.glyphicon.glyphicon-pencil
                  = link_to admin_tax_path(tax), method: :delete, class: 'delete-link', 'data-confirm' => 'Are you sure?' do
                    %span.glyphicon.glyphicon-remove
        .col-md-12= paginate @taxes
