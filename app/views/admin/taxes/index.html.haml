.row
  .col-md-12
    %h2 Taxes
  .col-md-10.col-md-offset-1
    .profile-box
      .text-right
        =link_to 'New Tax', new_admin_tax_path
      %br
      %table
        %tr
          %th Name
          %th Percentage
          %th.text-center Actions
        - @taxes.each do |tax|
          %tr
            %td= tax.name
            %td= tax.percentage
            %td.actions.text-center
              = link_to edit_admin_tax_path(tax) do
                %span.glyphicon.glyphicon-pencil
              = link_to admin_tax_path(tax), method: :delete, class: 'delete-link', 'data-confirm' => 'Are you sure?' do
                %span.glyphicon.glyphicon-remove
