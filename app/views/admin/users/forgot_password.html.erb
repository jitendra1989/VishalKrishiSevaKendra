<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="login-fields text-center">
			<%= image_tag 'admin/logo.jpg' %>
			<%= form_for :user do |f| %>
				<fieldset>
					<legend>Forgotten Password?</legend>
					<p class="text-left">Please enter your username, and we will get you back track in no time!</p>
					<div class="form-group text-left">
						<%= f.label :username, class: 'required' %>
						<%= f.text_field :username, required: true, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= link_to 'Back', login_admin_users_path, class: 'btn btn-default pull-left' %>
						<%= f.submit "Reset Password", class: "btn btn-primary pull-right", id: "submit" %>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>
