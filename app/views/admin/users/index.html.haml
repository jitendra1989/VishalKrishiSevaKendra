.row
	.col-md-12
		%h2 User
	.col-md-12
		.profile-box
			.text-right
				=link_to 'Create User', new_admin_user_path
			%br
			%table
				%tr
					%th Name
					%th Outlet
					%th Email
					%th Contact No
					%th.text-center{ colspan: 2 } Actions
				- @users.each do |user|
					%tr
						%td= user.name
						%td= user.outlet.try(:name)
						%td= user.email
						%td= user.phone
						%td.actions.text-center
							= link_to edit_admin_user_path(user) do
								%span.glyphicon.glyphicon-pencil
						%td.actions.text-center
							- if can? :delete, user
								= link_to admin_user_path(user), method: :delete, class: 'delete-link', 'data-confirm' => 'Are you sure?' do
									%span.glyphicon.glyphicon-remove
