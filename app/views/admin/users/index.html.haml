.row
	.col-md-12
		%h2 User
	.col-md-12
		.profile-box
			.row
				.col-md-6= paginate @users
				.col-md-6
					.text-right
						=link_to 'Create User', new_admin_user_path
				.col-md-12
					%br
					%table
						%tr
							%th Name
							%th Username
							%th Outlet
							%th Email
							%th Contact No
							%th Actions
						- @users.each do |user|
							%tr
								%td= user.name
								%td= user.username
								%td= user.outlet.try(:name)
								%td= user.email
								%td= user.phone
								%td.actions
									- if can? :edit, user
										= link_to edit_admin_user_path(user) do
											%span.glyphicon.glyphicon-pencil
									- if can? :reset_password, user
										= link_to 'Reset PWD', reset_password_admin_user_path(user)
									- if can? :delete, user
										= link_to admin_user_path(user), method: :delete, class: 'delete-link', 'data-confirm' => 'Are you sure?' do
											%span.glyphicon.glyphicon-remove
				.col-md-12= paginate @users
