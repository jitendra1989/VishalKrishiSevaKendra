.row
	.col-md-6.col-md-offset-3
		.login-fields.text-center
			= image_tag 'admin/logo.jpg'
			= form_for :user do |f|
				%fieldset
					%legend Reset your password
					.form-group
						= f.password_field :password, placeholder: "Password", required: "required"
					.form-group
						= f.password_field :password_confirmation, placeholder: "Re-enter Password", required: "required"
					.form-group
						= f.submit "Reset", class: "btn btn-primary pull-right", id: "submit"
