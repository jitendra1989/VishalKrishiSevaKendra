.row
  .col-md-12
    .row
      .col-md-12
        %h1= @category.name
        %br
      - @category.products.online.each do |product|
        .col-lg-2.col-md-3.col-sm-4.col-xs-6
          .product-box
            .product-image.text-center
              = link_to front_product_path(product) do
                = image_tag product.images.first.try(:name).try(:small).try(:url), class: "img-responsive"
            .product-name
              = link_to product.name, front_product_path(product)
            .product-code= product.code
            .product-description= product.description
            .product-price= decorated_frontend_price(product)
