.row
	.col-md-4.col-md-offset-4
		.login-fields
			= form_for :customer do |f|
				%fieldset
					%legend Forgotten Password?
					%p.text-left Please enter your email, and we will get you back track in no time!
					.form-group
						= f.label :email
						= f.text_field :email, required: true, class: 'form-control'
					.form-group
						= link_to 'Back', login_front_customer_path, class: 'btn btn-default pull-left'
						= f.submit "Reset Password", class: "btn btn-primary pull-right", id: "submit"
