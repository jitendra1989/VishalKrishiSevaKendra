.row
  .col-md-12
    .row
      .col-md-2
      .col-md-8
        .nivo-slider#slider
          - @banners.each do |banner|
            = link_to banner.url do
              = image_tag banner.image
    .row#products
      - @products.each do |product|
        = render 'product', product: product
    .row
      .col-md-12= paginate @products
