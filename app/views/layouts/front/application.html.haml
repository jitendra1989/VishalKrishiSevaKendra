!!!
%html
	%head
		%title Damian de Goa
		%meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
		= favicon_link_tag 'favicon.ico'
		= stylesheet_link_tag 'front/application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'front/application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		.container
			%header
				.row
					.col-md-6
						= link_to front_root_path do
							= image_tag 'logo.png'
					.col-md-6.text-right
						.customer-menu
							- if customer_logged_in?
								%span= "Welcome  #{@current_customer.name} | "
								= link_to 'Edit Account', edit_front_customer_path
								|
								= link_to 'Log out', logout_front_customer_path, method: :delete
							-	else
								= link_to 'Sign In', login_front_customer_path
						.cart-menu
							= link_to edit_front_cart_path do
								%span.glyphicon.glyphicon-shopping-cart
								%span.badge= online_cart_count
				.row
					.col-md-12
						%nav.navbar.navbar-default
							.navbar-header
								%button.navbar-toggle.collapsed{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#main-nav', 'aria-expanded' => false }
									%span.sr-only Toggle navigation
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar
							#main-nav.collapse.navbar-collapse.main-nav
								%ul.nav.navbar-nav
									%li.hidden-xs.hidden-sm{ role: 'presentation' }
										= link_to front_root_path do
											%span.sprites.nav-icons.home
											Home
									%li{ role: 'presentation' }
										= link_to front_pages_about_path do
											%span.sprites.nav-icons.about
											About Us
									%li{ role: 'presentation' }
										= link_to '#' do
											%span.sprites.nav-icons.collection
											Collection
									%li{ role: 'presentation' }
										= link_to front_pages_projects_path do
											%span.sprites.nav-icons.projects
											Projects
									%li{ role: 'presentation' }
										= link_to front_pages_clients_path do
											%span.sprites.nav-icons.clients
											Clients
									%li{ role: 'presentation' }
										= link_to front_pages_contact_path do
											%span.sprites.nav-icons.contact
											Contact Us
			.main-content
				- [@current_customer, @customer].each do |object|
					-if object.try(:errors).try(:any?)
						.alert.alert-danger
							%ul
								- object.errors.full_messages.each do |msg|
									%li= msg
				- flash.each do |message_type, message|
					.alert{class: "alert-#{message_type}" }= message
				= yield
			%footer
				.row
					.col-md-6
						= link_to 'https://www.facebook.com/pages/Damian-de-Goa/532272703493618', target: :_blank do
							%span.sprites.facebook
							Follow Us
					.col-md-6.text-right
						%a{ href: 'tel:+918322417045' }
							%span.sprites.phone
							0832 - 2417045
