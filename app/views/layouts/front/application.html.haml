!!!
%html
	%head
		%title Damian de Goa
		%meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
		= favicon_link_tag 'favicon.ico'
		= stylesheet_link_tag 'front/application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'front/application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		.container
			%header
				.row
					.col-md-6
						= link_to front_root_path do
							= image_tag 'logo.png'
					.col-md-6.text-right
						.customer-menu
							- if customer_logged_in?
								%span= "Welcome  #{@current_customer.name} | "
								= link_to 'View Account', view_front_customers_path
								|
								= link_to 'Log out', logout_front_customers_path, method: :delete
							-	else
								= link_to 'Sign In', login_front_customers_path
				.row
					.col-md-12
						%nav.navbar.navbar-default
							.navbar-header
								%button.navbar-toggle.collapsed{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#main-nav', 'aria-expanded' => false }
									%span.sr-only Toggle navigation
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar
							#main-nav.collapse.navbar-collapse.main-nav
								%ul.nav.navbar-nav
									%li.hidden-xs.hidden-sm{ role: 'presentation' }
										= link_to front_root_path do
											%span.sprites.nav-icons.home
											Home
									%li{ role: 'presentation' }
										= link_to front_pages_about_path do
											%span.sprites.nav-icons.about
											About Us
									%li{ role: 'presentation' }
										= link_to '#' do
											%span.sprites.nav-icons.collection
											Collection
									%li{ role: 'presentation' }
										= link_to front_pages_projects_path do
											%span.sprites.nav-icons.projects
											Projects
									%li{ role: 'presentation' }
										= link_to front_pages_clients_path do
											%span.sprites.nav-icons.clients
											Clients
									%li{ role: 'presentation' }
										= link_to front_pages_contact_path do
											%span.sprites.nav-icons.contact
											Contact Us
						%nav.navbar.navbar-default
							.navbar-category
								%button.navbar-toggle.collapsed{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#category-nav', 'aria-expanded' => false }
									%span.sr-only Toggle navigation
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar
							#category-nav.collapse.navbar-collapse.category-nav
								%ul.nav.navbar-nav
									- Category.roots.each do |category|
										%li.root-category{ role: 'presentation' }
											= link_to front_category_path(category), class: 'root-category-link', role: 'button', 'aria-haspopup' => true, 'aria-expanded' => false do
												= category.name
											- if category.has_children?
												%ul
													- category.children.each do |category|
														%li{ role: 'presentation' }
															= link_to category.name, front_category_path(category)
			.main-content= yield
			%footer
				.row
					.col-md-6
						= link_to 'https://www.facebook.com/pages/Damian-de-Goa/532272703493618', target: :_blank do
							%span.sprites.facebook
							Follow Us
